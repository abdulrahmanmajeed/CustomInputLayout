<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="DHBInputLayout">

        <attr name="customError" format="string|reference" />
        <attr name="isMandatory" format="boolean" />
        <attr name="maxLength" format="integer" />

        <attr name="textColorFloatingField" format="color|reference" />
        <attr name="textSizeFloatingField" format="dimension" />

        <attr name="hint" format="string|reference" />
        <attr name="textColorHint" format="color|reference" />
        <attr name="textColorInputField" format="color|reference" />
        <attr name="textSizeInputField" format="dimension" />

        <attr name="textColorErrorField" format="color|reference" />
        <attr name="textSizeErrorField" format="dimension" />

        <attr name="operationToggleType">
            <enum name="password" value="1"/>
            <enum name="other" value="2"/>
        </attr>

        <attr name="isReadOnly" format="boolean" />
        <attr name="isPassword" format="boolean" />
        <attr name="isNumeric" format="boolean" />
        <attr name="drawableEnd" format="integer" />
        <attr name="operationToggleDrawable" format="reference" />
    </declare-styleable>
</resources>